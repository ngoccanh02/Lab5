@model Food.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Thông tin loại sản phẩm</h5>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên Loại Sản Phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
    </div>
    
    <p>
        <a href="@Url.Action("Edit", new { id = Model.CategoryID })" class="btn btn-warning" role="button">Sửa</a>|
        @Html.ActionLink("Về trang quản lý loại sản phẩm", "Index")
    </p>
</div>


    
