@model Food.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa Thông Tin Loại Sản Phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Category</h4>
    <hr />@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.CategoryID)

<div class="form-group">
    Tên Loại Sản Phẩm
    <div class="col-md-10">
        <input type="text" size="70" name="sTenLSP" value="@Model.Name" required />
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Lưu Thông Tin" class="btn btn-default" />
    </div>
</div>
</div>
}

<div>
    @Html.ActionLink("Trở Về Trang Quản Lý Loại Sản Phẩm", "Index")
</div>
