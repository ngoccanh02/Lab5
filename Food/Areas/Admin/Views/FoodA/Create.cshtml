@model Food.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>THÊM SẢN PHẨM</h2>

@using (Html.BeginForm("Create", "", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <span style="color: red;">@ViewData["err1"]</span>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <label class="control-label col-md-2">
            Tên sản phẩm
        </label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenSP" value="@ViewBag.Name" />
            <input type="submit" value="Thêm Mới" class="btn btn-default" />
        </div>
        @ViewBag.TB1
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Số Lượng
        </label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTrongLuong" value="@ViewBag.Weight" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Giá bán:
        </label>
        <div class="col-md-10">
            <input type="number" min="1" name="mGiaBan" value="@ViewBag.Price" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Mô tả:
        </label>
        <div class="col-md-10">
            <textarea id="textarea" name="sMoTa">@ViewBag.Decription</textarea>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Ảnh bìa:
        </label>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            @ViewBag.ThongBao
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Loại sản phẩm
        </label>
        <div class="col-md-10">
            @Html.DropDownList("CategoryID")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="reset" value="Làm Mới" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở Về Trang Quản Lý Sản Phẩm", "Index")
</div>

