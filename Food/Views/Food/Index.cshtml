@model IEnumerable<Food.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FoodLayoutPage1.cshtml";
}

<style>
    .hero__text {
        position: absolute;
        bottom: 20px;
    }
</style>
<!-- Header Section End -->
<!-- Hero Section Begin -->
@if (ViewBag.ThongBao != null)
{
    <script>
        alert("@Html.Raw(@ViewBag.Message)")
    </script>
}
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    @Html.Action("Category", "Food")
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search" style="margin-left:95px;   ">
                    <div class="hero__search__form">
                        @using (Html.BeginForm("Find", "Food", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <input type="text" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập từ khóa tìm kiếm">
                            <button type="submit" class="site-btn">SEARCH</button>
                        }
                    </div>
                </div>
                <div>
                    <div id="demo" class="carousel slide" data-ride="carousel">

                        <ul class="carousel-indicators">
                            <li data-target="#demo" data-slide-to="0" class="active"></li>
                            <li data-target="#demo" data-slide-to="1"></li>
                            <li data-target="#demo" data-slide-to="2"></li>
                        </ul>

                        <!-- The slideshow -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Content/Images/s-l1600.jpg" alt="Los Angeles" width="1100">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/Images/mau-poster-ca-nhac-5.jpg" alt="Chicago" height="320" width="1100">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/Images/video-game-poster-2G3C3CP.jpg" alt="New York" height="320" width="1100">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="carousel-control-prev" href="#demo" data-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#demo" data-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<!-- Categories Section End -->
