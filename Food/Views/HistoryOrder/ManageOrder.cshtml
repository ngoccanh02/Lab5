@using Food.Models
@model IEnumerable<Food.Models.OrderDetail>
@{
    ViewBag.Title = "ManageOrder";
    Layout = "~/Views/Shared/_FoodLayoutPage1.cshtml";
}
<style>
    .breadcrumb__text {
        color: #fff;
        position: absolute;
        bottom: 20px;
        padding-left: 330px;
    }
</style>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Quản lí đơn hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Index","Food")">Trang chủ</a>
                        <span>Quản lí đơn hàng</span>
                    </div>
                </div>
                <img src="~/Content/Images/baner-mini.jpg" />
            </div>
        </div>
    </div>
</section>
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product" style="width:47%;">Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Thanh toán</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach(var item in Model)
                           {
                               FoodStoreEntities db = new FoodStoreEntities();
                               Product pd = db.Products.SingleOrDefault(n => n.ProductID == item.ProductID);
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img style="max-width:200px;"  src="~/Content/Images/@pd.Image" alt="">
                                        <h5>@pd.Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @Html.FormatValue(pd.Price, "{0:#,##0}")VNĐ
                                    </td>
                                        <td class="shoping__cart__price">
                                            
                                            <h5>@item.Quantity</h5> 
                                        </td>

                                        <td class="shoping__cart__total">
                                            @{ 
                                                var tt = @item.Quantity * @pd.Price;
                                            }
                                            <h5>@tt</h5>

                                        </td>
                                        <td>
                                            @{ 
                                                if (item.PayStatus==0)
                                                {
                                                    <h5 style="color:red;"><b>Chưa thanh toán</b></h5>
                                                }
                                                else
                                                {
                                                    <h5 style="color:forestgreen"><b>Đã thanh toán</b></h5>
                                                }
                                            }
                                        </td>
                                    <td>
                                        <h5>Chờ Xác Nhận</h5>
                                    </td>
                                        <td>
                                            <a href="@Url.Action("Edit","HistoryOrder",new {id = item.OrderDetailID})" class="btn btn-success"><i class="fa fa-edit"></i></a>
                                        </td>
                                    
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

