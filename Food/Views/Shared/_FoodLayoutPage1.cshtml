            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo" style="height: 135px; width: 117px; margin-left: 70px">
                        <a href="./index.html"><img src="~/Content/Images/logoFood.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    @if (Session["TaiKhoan"] != null)
                    {
